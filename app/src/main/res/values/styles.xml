<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionBar</item>
        <item name="colorPrimaryDark">@color/notificationBar</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:editTextStyle">@style/editTextMaterial</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="editTextMaterial" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/input_hint_color</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
